extend ../layout

block content

  a.btn.btn-secondary.mb-3(href='http://localhost:3100/bicicletas') Home
  br
  h1.text-center Bicicleta #{bici.id}
  hr
  div.row.text-center
    div.col-md-8.mx-auto
      table.table.table-bordered.table-striped
        tbody
          tr
            td(style='width: 30%') Color:
            td(style='width: 70%')=bici.color
          tr
            td Modelo:
            td=bici.modelo
          tr
            td Ubicaci√≥n:
            td
              span#lat(style='display: none')=bici.latitud
              span#lng(style='display: none')=bici.longitud
              div#map(style='width: 100%; height: 250px')
          tr
            td Acciones:
            td
              a.btn.btn-primary.mx-2(href='/bicicletas/'+bici.id+'/update') Editar
              form.inline(style='display: inline-block', method='post', action='/bicicletas/'+bici.id+'/delete')
                input(type='hidden', name='id', value=bici.id)
                button.btn.btn-danger.mx-2(type='submit', name='submit_param', value='submit_value') Eliminar
